---
const { titulo, textoContenido, foto, share } = Astro.props;
---

<article>
  <img src={foto.src} alt={`${titulo} Foto`} />
  <div class="projectContent">
    <h2>{titulo}</h2>
    {
      share && (
        <a
          id="share"
          href="https://chef-claude-ashen.vercel.app/"
          target="_blank"
        >
          <img src={share.src} alt="Send to page" />
        </a>
      )
    }

    <p>{textoContenido}</p>
  </div>
</article>
<hr />
<style>
  h2 {
    display: inline-block;
  }
  #share {
    display: inline-block;
    width: 20px;
  }
  article {
    margin: 24px 0px;
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 16px;
    max-width: 900px;
  }
  article > img {
    width: 250px;
    /* height: 100px; */
    object-fit: contain;
    box-shadow: 3px 3px 10px -2px rgba(0, 0, 0, 0.5);
    -webkit-box-shadow: 3px 3px 10px -2px rgba(0, 0, 0, 0.5);
    -moz-box-shadow: 3px 3px 10px -2px rgba(0, 0, 0, 0.5);
    border-radius: 5px;
  }

  .projectContent {
    padding: 8px 0;
  }
  .projectContent h2 {
    font-size: 1.2rem;
    font-weight: bold;
  }
  hr {
    width: 70%;
  }
</style>
